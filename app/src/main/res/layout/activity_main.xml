<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.calculator.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:padding="10dp"
            android:textSize="32dp"
            android:id="@+id/expression"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:padding="10dp"
            android:textSize="32dp"
            android:id="@+id/value"
            android:textColor="@android:color/black"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:padding="0dp"
            android:layout_margin="0dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25">

                <TextView
                    style="@style/NumberView"
                    android:text="1"
                    android:tag="1"
                    android:onClick="append"/>

                <TextView
                    style="@style/NumberView"
                    android:text="2"
                    android:tag="2"
                    android:onClick="append"/>

                <TextView
                    style="@style/NumberView"
                    android:text="3"
                    android:tag="3"
                    android:onClick="append"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25">

                <TextView
                    style="@style/NumberView"
                    android:text="4"
                    android:tag="4"
                    android:onClick="append"/>

                <TextView
                    style="@style/NumberView"
                    android:text="5"
                    android:tag="5"
                    android:onClick="append"/>

                <TextView
                    style="@style/NumberView"
                    android:text="6"
                    android:tag="6"
                    android:onClick="append"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25">

                <TextView
                    style="@style/NumberView"
                    android:text="7"
                    android:tag="7"
                    android:onClick="append"/>

                <TextView
                    style="@style/NumberView"
                    android:text="8"
                    android:tag="8"
                    android:onClick="append"/>

                <TextView
                    style="@style/NumberView"
                    android:text="9"
                    android:tag="9"
                    android:onClick="append"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25">

                <TextView
                    style="@style/NumberView"
                    android:text="."
                    android:tag="."
                    android:onClick="append"/>

                <TextView
                    style="@style/NumberView"
                    android:text="0"
                    android:tag="0"
                    android:onClick="append"/>

                <TextView
                    style="@style/NumberView"
                    android:text="="
                    android:onClick="showValue"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3">

            <TextView
                android:id="@+id/clear_button"
                style="@style/OperatorView"
                android:text="DEL" />

            <TextView
                style="@style/OperatorView"
                android:text="/"
                android:tag="/"
                android:onClick="append"/>

            <TextView
                style="@style/OperatorView"
                android:text="*"
                android:tag="*"
                android:onClick="append"/>

            <TextView
                style="@style/OperatorView"
                android:text="-"
                android:tag="-"
                android:onClick="append"/>

            <TextView
                style="@style/OperatorView"
                android:text="+"
                android:tag="+"
                android:onClick="append"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>

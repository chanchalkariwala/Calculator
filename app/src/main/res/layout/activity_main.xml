<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.calculator.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3">

        <TextView
            android:textSize="32dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:id="@+id/expression"/>

        <TextView
            android:textSize="32dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:id="@+id/value"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">

        <GridLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:columnCount="3"
            android:rowCount="4">

            <Button
                android:text="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:tag="1"
                android:onClick="append"/>

            <Button
                android:text="2"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:tag="2"
                android:onClick="append"/>

            <Button
                android:text="3"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:tag="3"
                android:onClick="append"/>

            <Button
                android:text="4"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:tag="4"
                android:onClick="append"/>

            <Button
                android:text="5"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:tag="5"
                android:onClick="append"/>

            <Button
                android:text="6"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:tag="6"
                android:onClick="append"/>

            <Button
                android:text="7"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:tag="7"
                android:onClick="append"/>

            <Button
                android:text="8"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:tag="8"
                android:onClick="append"/>

            <Button
                android:text="9"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:tag="9"
                android:onClick="append"/>

            <Button
                android:text="."
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:tag="."
                android:onClick="append"/>

            <Button
                android:text="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:tag="0"
                android:onClick="append"/>

            <Button
                android:text="="
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:onClick="evaluate"/>

        </GridLayout>

        <GridLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:columnCount="1"
            android:rowCount="5">

            <Button
                android:text="DEL"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:onClick="clear"/>

            <Button
                android:text="/"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:tag="/"
                android:onClick="append"/>

            <Button
                android:text="*"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:tag="*"
                android:onClick="append"/>

            <Button
                android:text="-"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:tag="-"
                android:onClick="append"/>

            <Button
                android:text="+"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:tag="+"
                android:onClick="append"/>

        </GridLayout>

    </LinearLayout>


</LinearLayout>
